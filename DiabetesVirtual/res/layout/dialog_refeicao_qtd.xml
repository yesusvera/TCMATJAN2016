<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/gelo">    
	<TableLayout android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:shrinkColumns="1"
	    android:layout_margin="10dp">    		    
		<EditText android:id="@+id/editText_qtd"
		        android:layout_width="wrap_content"
		        android:layout_height="40dp"
		        style="@style/fonte_editText" 
		        android:background="@drawable/editext"
		        android:hint="@string/qtd_medidas"
		        android:ellipsize="start"
		        android:gravity="center"
		        android:inputType="numberDecimal" />
	    <TableRow android:layout_marginTop="5dp">
		    <TextView android:text="@string/descricao"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        style="@style/fonte_do_dialog"/>
		    <TextView android:id="@+id/textView_desc_item"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        style="@style/fonte_do_dialog_edit"/>
	    </TableRow>
	    
	    <View android:layout_width="fill_parent" android:layout_height="0.6dp"
            android:layout_margin="2dp" android:background="#000"/>
	    
	    <TableRow  android:layout_marginTop="5dp">
		    <TextView android:text="@string/medida"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        style="@style/fonte_do_dialog"/>
		    <TextView android:id="@+id/textView_medida_item"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        style="@style/fonte_do_dialog_edit"/>
	    </TableRow>
	    
	    <View android:layout_width="fill_parent" android:layout_height="0.6dp"
            android:layout_margin="2dp" android:background="#000"/>
	    
	     <TableRow  android:layout_marginTop="5dp">
		    <TextView android:text="@string/peso"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        style="@style/fonte_do_dialog"/>
		    <TextView android:id="@+id/textView_peso_item"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        style="@style/fonte_do_dialog_edit"/>
	    </TableRow>
	    
	    <View android:layout_width="fill_parent" android:layout_height="0.6dp"
            android:layout_margin="2dp" android:background="#000"/>
	     
	    <TableRow  android:layout_marginTop="5dp">
		    <TextView android:text="@string/carboidrato"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        style="@style/fonte_do_dialog"
		        android:layout_marginRight="5dp"/>
		    <TextView android:id="@+id/textView_carb_item"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        style="@style/fonte_do_dialog_edit"/>
	    </TableRow>
	    
	</TableLayout>
    
	<LinearLayout android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="@drawable/botao"
		android:orientation="horizontal">		
		<Button android:id="@id/b_cancel"
		    style="@style/tema_botao" 
		    android:text="@string/b_cancelar"
		    android:layout_height="50dp"
		    android:layout_width="0dp"
		    android:layout_weight="1"/>	
		<View android:layout_width="0.6dp" 
	            android:layout_height="fill_parent" 
	            android:layout_marginTop="5dp"
			    android:layout_marginBottom="5dp" 
			    android:background="@color/cinza_claro"/>
		<Button android:id="@id/b_ok" 
		    style="@style/tema_botao" 
		    android:text="@string/b_confirmar"
		    android:layout_height="50dp"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:onClick="confirmaQtd"/>	
	</LinearLayout>
    
</LinearLayout>
