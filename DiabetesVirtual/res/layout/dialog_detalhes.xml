<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/gelo">
    
<!-- TIPO E DADOS -->	 
	<LinearLayout android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:orientation="vertical">      
	    <LinearLayout android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="left">
		    <TextView android:id="@+id/detalhes_tipo"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="18sp"
		        android:textColor="#1E90FF"
		        android:textStyle="bold"
		        android:layout_marginRight="10dp"/>		
			<TextView android:id="@+id/detalhes_dados"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		       	android:textSize="22sp"
		        android:textColor="#FF7F00"
		        android:textStyle="bold"/>	
		</LinearLayout>
<!-- OBS -->	
		<TextView android:id="@+id/detalhes_obs"
		   	android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="14sp"
		    android:textColor="#1C1C1C"
		    android:gravity="left"/>
		
	<!-- DATA HORA -->		    
		<LinearLayout android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right|bottom"
		    android:gravity="right"
		    android:orientation="horizontal"
		    android:layout_marginTop="5dp">	
			<TextView android:id="@+id/detalhes_data"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textSize="14sp"
			    android:textColor="#0000FF"
			    android:textStyle="bold"
			    android:layout_marginRight="5dp"/>				
			<TextView android:id="@+id/detalhes_hora"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="14sp"
		        android:textColor="#0000FF"
		        android:textStyle="bold"/>
		</LinearLayout>
	</LinearLayout>
	
    <LinearLayout android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
		android:background="@drawable/botao"
		android:orientation="horizontal">
		<Button android:id="@+id/detalhes_voltar" 
		    style="@style/tema_botao" 
		    android:text="@string/b_voltar"
		    android:layout_height="50dp"
		    android:layout_width="0dp"
		    android:layout_weight="1"/>	
		<View android:layout_width="0.6dp" 
	            android:layout_height="fill_parent" 
	            android:layout_marginTop="5dp"
			    android:layout_marginBottom="5dp" 
			    android:background="@color/cinza_claro"/> 
	    <Button android:id="@+id/detalhes_editar"
	        style="@style/tema_botao" 
			android:text="@string/b_editar"
			android:layout_height="50dp"
			android:layout_width="0dp"
		    android:layout_weight="1"/>	
		<View android:layout_width="0.6dp" 
	            android:layout_height="fill_parent" 
	            android:layout_marginTop="5dp"
			    android:layout_marginBottom="5dp" 
			    android:background="@color/cinza_claro"/> 
	    <Button android:id="@+id/detalhes_excluir"
	        style="@style/tema_botao" 
			android:text="@string/b_excluir"
			android:layout_height="50dp"
			android:layout_width="0dp"
		    android:layout_weight="1"/>	
   	</LinearLayout>

</LinearLayout>